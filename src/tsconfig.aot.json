{
	"compilerOptions": {
		"target": "es5",
		"module": "es2015",
		"moduleResolution": "node",
    "declaration": true,
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": [
			"es2015",
			"dom"
		],
		"noImplicitAny": false,
		"suppressImplicitAnyIndexErrors": true,
		"sourceRoot": "src",
		"outDir": "../dist"
	},
	"files": [
		"./index.ts"
	],
	"angularCompilerOptions": {
		"genDir": "../.aot"
	}
}